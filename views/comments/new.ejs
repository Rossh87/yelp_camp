<%include ../partials/header%>

	<div class="row">
		<div class="col-md-6 centered-form">		
			<h1>Add New Comment to <%=campground.name%> </h1>
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" placeholder="text" name="comment[text]">
					</textarea> 
				</div>
				<div class="form-group">
					<button class="btn btn-large btn-primary" type="Submit">Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>

<%include ../partials/footer%>