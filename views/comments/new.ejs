<%include ../partials/header%>

	<div class="row">
		<h1 style="text-align:center">Add New Comment to <%=campground.name%> </h1>
		<div style="width:30%; margin:25px auto">
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" placeholder="text" name="comment[text]">
					</textarea> 
				</div>
				<div class="form-group">
					<button class="btn btn-large btn-primary btn-block" type="Submit">Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>

<%include ../partials/footer%>