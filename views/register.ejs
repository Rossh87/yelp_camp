

<% include partials/header %> 

	<div class="row">
		<div class="centered-form">
			<h1>Register</h1>
			<form action="/register" method="POST">
				<div class="form-group">
					<label for="username">Desired Username</label>
					<input id="username" class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input id="password" class="form-control" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group">
					<label for="firstName">First Name</label>
					<input id="firstName" class="form-control" type="text" name="firstName" placeholder="John">
				</div>
				<div class="form-group">
					<label for="lastName">Last Name</label>
					<input id="lastName" class="form-control" type="text" name="lastName" placeholder="Doe">
				</div>
				<div class="form-group">
					<label for="avatar">Link to desired avatar.  This image will be displayed in your profile.</label>
					<input id="avatar" class="form-control" type="text" name="avatar" placeholder="URL">
				</div>
				<div class="form-group">
					<label for="email">Your Email Address</label>
					<input id="email" class="form-control" type="email" name="email" placeholder="John@gmail.com">
				</div>
				<div class="form-group">
					<label for="adminAuthorization">Admin authorization code (optional)</label>
					<input id="adminAuthorization" class="form-control" type="text" name="adminCode">
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-large btn-block" type="submit">
				</div>
			</form>
		</div>
	</div>






<% include partials/footer %>