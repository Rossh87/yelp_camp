<% include ../partials/header %>

	<header class="jumbotron">
		<div class="container">
			<H1>Welcome To YelpCamp!</H1>
			<p>See the lovely lakes at our handpicked campgrounds, all over the world!</p>
			<p>
				<a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campgrounds!</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<div class="col-lg-12">
			<h3>Our most popular sites</h3>
		</div>
		<% if (!campgrounds.length) { %>
			<div>No campgrounds matched your search criteria.</div>
		<% } %>
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="card mb-4">
					<img class="card-img-top" src="<%= campground.image %>" alt="Image of <%= campground.name %> campground">
					<div class="card-body">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }) %>

	</div>

<% include ../partials/footer %>